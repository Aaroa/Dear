<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_tab_icon_layout"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dip"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/main_tab_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/main_icon_message_pr"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/main_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_tab_icon_layout"
            android:textSize="@dimen/text_size_11"
            android:singleLine="true"
            android:text="消息"/>

        <TextView
            android:id="@+id/main_tab_msg_count_tv"
            android:layout_width="17dip"
            android:layout_height="17dip"
            android:textSize="@dimen/text_size_6"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/margin_3"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-5dip"
            android:singleLine="true"
            android:layout_marginBottom="5dip"
            android:layout_toRightOf="@+id/main_tab_icon_layout"
            android:background="@drawable/msg_redot_bg"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
