<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/title_color">

        <LinearLayout
            android:id="@+id/title_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="50dip"
            android:gravity="center"
            android:background="@drawable/title_seletor_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_icon_back"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/title_right_layout"
            android:layout_toRightOf="@+id/title_back_layout"
            android:textSize="@dimen/margin_18"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/title_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="50dip"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/title_seletor_bg">

            <TextView
                android:id="@+id/title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/margin_18"/>

            <ImageView
                android:id="@+id/title_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/title_more_icon"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
