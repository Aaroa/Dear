<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_base_background"
        android:gravity="center"
        android:padding="30dip" >


        <com.jinggan.dear.view.IProgressBar
            android:id="@+id/loading_bar"
            android:layout_width="55dip"
            android:layout_height="50dip"
            toolbar:IarcColor="@android:color/holo_red_dark"
            toolbar:IborderWidth="4dip"
            android:layout_marginRight="@dimen/margin_15"/>

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/loading_bar"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/loading_defalut_dialog_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>
</LinearLayout>
